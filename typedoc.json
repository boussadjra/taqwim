{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["./packages/core-utils/src/lib/index.ts"],
  "out": "docs/api",
  "plugin": ["typedoc-plugin-markdown"],
  "excludeNotDocumentedKinds": ["Property", "Interface", "Namespace", "Variable", "TypeAlias"],

  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "baseUrl": ".",
    "paths": {
      "@core-utils/*": ["./packages/core-utils/src/lib/*"]
    }
  }
}
