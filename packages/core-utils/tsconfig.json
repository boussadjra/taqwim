{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true
  },
  "include": [
    "src",
    "tests/addHijriQuarters.test.ts",
    "tests/parseDateString.test.ts",
    "tests/normalizeHijriDate.test.ts",
    "tests/normalizeHijriDate.test.ts",
    "tests/getDayInWeek.test.ts",
    "tests/getDayInWeek.test.ts",
    "tests/getMonthAdjacentDays.test.ts",
    "tests/getMonthAdjacentDays.test.ts",
    "tests/isEqual.test.ts",
    "tests/isEqual.test.ts"
  ]
}
